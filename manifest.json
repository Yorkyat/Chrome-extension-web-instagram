{
    "manifest_version": 2,
    "version": "1.0",

    "name": "Chevereto",
    "description": "chevereto chrome extension",
    "icons": {"128": "icon.png"},

    "background":{
        "scripts": ["/scripts/background.js", "/scripts/jquery-3.3.1.min.js"]
    },

    "content_security_policy": "script-src 'self' https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js; object-src 'self'",

    "content_scripts":[
        {
            "matches": ["http://localhost/chevereto/*", "https://localhost/chevereto/*"],
            "js": ["/scripts/content.js", "/scripts/jquery-3.3.1.min.js"]
        }
    ],

    "web_accessible_resources": ["/scripts/inject.js", "/scripts/caman.full.js"],

    "browser_action":{
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "permissions":[
        "contextMenus",
        "tabs",
        "storage"
    ]

}