{
    "manifest_version": 2,
    "version": "1.0",

    "name": "Chevereto",
    "description": "chevereto chrome extension",
    "icons": {"128": "icon.png"},

    "background":{
        "scripts": ["/scripts/background.js"]
    },

    "content_scripts":[
        {
            "matches": ["http://localhost/chevereto/*", "https://localhost/chevereto/*"],
            "js": ["/scripts/content.js"]
        }
    ],

    "browser_action":{
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "permissions":[
        "contextMenus",
        "tabs"
    ]

}